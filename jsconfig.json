{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "lib": ["ES2022", "dom"],
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "*.js",
    "globals.d.ts",
    "types/**/*.d.ts",
    "state/**/*.js",
    "events/**/*.js",
    "llm/**/*.js",
    "strategies/**/*.js",
    "utils/**/*.js",
    "controllers/**/*.js",
    "handlers/**/*.js",
    "stt/stt-deepgram.js",
    "stt/stt-vosk.js",
    "stt/vad-engine.js",
    "stt/stt-audio-worklet-processor.js",
    "stt/models-stt/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "__tests__",
    "__tests__/**",
    "coverage",
    "coverage/**",
    "playwright-report",
    "playwright-report/**",
    "audio",
    "audio/**",
    "testing",
    "testing/**",
    "temp",
    "temp/**",
    "stt/stt-whisper.js"
  ]
}
