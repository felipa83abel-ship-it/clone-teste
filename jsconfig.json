{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "dom"],
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "types": ["node", "@playwright/test"],
    "suppressImplicitAnyIndexErrors": true,
    "suppressPropertyInitializedButNeverReadWarnings": true
  },
  "include": [
    "*.js",
    "state/**/*.js",
    "events/**/*.js",
    "llm/**/*.js",
    "strategies/**/*.js",
    "utils/**/*.js",
    "controllers/**/*.js",
    "handlers/**/*.js",
    "stt/**/*.js"
  ],
  "exclude": ["node_modules", "__tests__", "coverage", "playwright-report"]
}
